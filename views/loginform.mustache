<script src="/js/message.js" defer></script>
<script src="/js/message.js" defer></script>
<div class="row border rounded my-auto col-md-10 mx-auto bg-light">
  <div class="col-md-6">
    <img src="images/login.png" class="img-fluid" alt="Image" class="img-fluid" />
  </div>
  <div class="col-md-6 contents my-auto">
    <div class="row justify-content-center">
      <div class="col-md-8 p-3">
        <div class="mb-4">
          <h3 class="text-center">Log In</h3>
          <p class="mb-4">
          </p>
        </div>
        <form action="auth/local" method="post">
          <div class="form-group first">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?" title="Please enter a valid email address. For example, 'someone@example.com'" required/>
          </div>
          <div class="form-group last mb-4">
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password" name="password" required
              pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*_=+-]).{8,20}$"
              title="Passwords must contain at least 1 uppercase letter, at least 1 lowercase letter, be between 8 and 20 characters and have at least one number and at least one of the following symbols: !@#$%^&*_=+-" />
          </div>
          <input
            type="submit"
            value="Log In"
            class="btn btn-block btn-dark w-100"
          />
          <div class="my-2 text-center">
            <span class="text-danger" id="message">

            </span>
          </div>
          <div class="text-center"><small>Don't have an account yet? <a href="/register">Register</a></small></div>
          <span class="d-block text-left mx-auto text-center my-4 text-muted"
            >— or —</span
          >
          <div class="social-login mx-auto text-center d-flex flex-row gap-3 justify-content-center pb-4">
              <div class="row">
              <a class="btn btn-outline-dark w-100" href="/auth/google" role="button" style="text-transform:none">
                <img height="20px" style="margin-bottom:3px; margin-right:5px" alt="Google sign-in" src="https://upload.wikimedia.org/wikipedia/commons/thumb/5/53/Google_%22G%22_Logo.svg/512px-Google_%22G%22_Logo.svg.png" />
                Log in with Google
              </a>
            </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
